{
  "manifest_version": 2,
  "name": "Translate",
  "version": "1.0.0",
  "permissions": ["activeTab"],
  "icons": {
    "48": "icons/icon48.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "config.js", "apiConfig.js"],
      "css": ["styles.css"]
    }
  ]
}
