{
  "manifest_version": 2,
  "name": "Translate",
  "version": "1.0.0",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "config.js", "apiConfig.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_icon": "./assets/images/icon.png"
  }
}
